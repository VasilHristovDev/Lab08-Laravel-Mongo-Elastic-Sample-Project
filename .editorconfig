root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# YAML Files
[*.{yml,yaml}]
indent_size = 2

[*.php]
indent_size = 2

[Dockerfile]
indent_size = 2

[*.json]
indent_size = 2

[*.tf]
indent_size = 2

